	This is the contact pug file which is used to take contact details from the website. The page is extending from the layout.pug file.
	This page mainly contains the form and a submit button.
extends layout

block content
	.coverContainer
		video#myVideo(autoplay='', muted='', loop='', playsinline='')
			source(src='/video/Plexus.mp4', type='video/mp4')
		//- img.cover(src='/images/cover.jpg', alt='Cover Image')
		.titleCentered
			h1= title_contact
			if isLoggedIn
				p Welcome to #{title_contact} page, #{user.username}
			else
				p Welcome to #{title_contact} page

	form(method="POST")
		.formContainer
			form
				.row
					.labelsForm
						label(for='fistName') First Name
					.inputsForm
						input.form-control(type='text', name='firstName', placeholder='Please enter your first Name')
				.row
					.labelsForm
						label(for='lastName') Last Name
					.inputsForm
						input.form-control(type='text', name='lastName', placeholder='Please enter your last name')
				.row
					.labelsForm
						label(for='email') Email
					.inputsForm
						input.form-control(type='email', name='email', placeholder='Please enter email address')
				.row
					.labelsForm
						label(for='subject') Subject
					.inputsForm
						textarea.form-control(name='subject', placeholder='Write something here..', style='height:200px')
				.row
					button.btn.btn-primary Submit
